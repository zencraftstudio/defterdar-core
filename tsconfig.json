{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es2019"
    ],
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "jest.config.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "assets": [
    "ext/**/**"
  ]
}
